<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SportsStore</title>
    <link asp-href-include="/twitter-bootstrap/css/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" rel="stylesheet" />
    <link rel="stylesheet" asp-href-include="/font-awesome/css/*.css" />
    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse bg-inverse" role="navigation"
         aria-label="navigation">
        <div class="row">
            <a class="col navbar-brand" href="#">SPORTS STORE</a>
            <div class="col-4 text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">

        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>

        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</body>
</html>