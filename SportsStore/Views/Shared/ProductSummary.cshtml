@model Product
 <div class="card card-outline-warning m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            <span style="color:cadetblue">@Model.Name</span>

            <span class="badge badge-pill badge-success" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">@Model.Description</div>
</div>